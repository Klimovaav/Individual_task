/* Читатель:
 - идентификатор пользователя;
 - фамилия имя отчество;
 - дата рождения;
 - номер телефона;
 - номер читательского билета */

/* В этом классе хранятся личные данные читателя. Идентификатором Читатель привязан к классу Пользователь. 
Номер читательского билета привязывает к классу Читатель класс Читательский билет. Вся информация о взятых и забронированных книгах находится в Читательском билете. */


    public class Reader
    {
        public int id;
        public string fio;
        public string dBirthday;
        public string telNumber;
        public int readerTicket;
        public string[] currentBooks;
        public string[] lastBooks;

        public Reader() //в конструкторе не объявлены данные о текущих взятых книгах и о прошлых взятых книгах. Из логики, что при заведении нового читателя он еще ничего не брал
        {
            id = 0;
            fio = "ФИО читателя";
            dBirthday = "Дата рождения";
            telNumber = "Контактный номер";
            readerTicket = 0;
        }

        public Reader(int id, string fio, string dBirthday, string telNumber, int readerTicket)
        {
            this.id = id;
            this.fio = fio;
            this.dBirthday = dBirthday;
            this.telNumber = telNumber;
            this.readerTicket = readerTicket;
        }
    }
}

