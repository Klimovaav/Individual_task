/* Пользователь:
 - логин;
 - пароль;
 - идентификатор.
*/

/* В приложении предполагаются как минимум два типа пользователей: читатели и библиотекари. 
Поэтому сущность пользователя вынесла в отдельный класс. */

class user
{
    private string login;
    private string parol;
    private int id;
    // поля класса

    // конструктор
    private user(string MyLogin, string MyParol, int MyID)
    {
        login = MyLogin;
        parol = MyParol;
        id = MyID;
    }
}
